<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GymCategoryActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:layout_gravity="center"
        android:src="@drawable/gym_icon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/Gimnacios"
        android:textAlignment="center"
        android:textColor="#ECB205"
        android:textSize="40sp"
        android:textStyle="bold|italic" />

    <ListView
        android:id="@+id/list_options_gym"
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:background="#95FFEB3B">
    </ListView>

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#FFC107"
        android:onClick="onMapNear"
        android:text="@string/mapaN"
        app:icon="@android:drawable/ic_menu_mylocation"
        app:iconTint="#FB0303" />

</LinearLayout>
